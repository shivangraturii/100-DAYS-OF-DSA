#include <stdio.h>

int countZeroSum(int arr[], int n) {
    int count = 0;

    for(int i = 0; i < n; i++) {
        int sum = 0;

        for(int j = i; j < n; j++) {
            sum += arr[j];

            if(sum == 0)
                count++;
        }
    }

    return count;
}

int main() {
    int arr[] = {3, 4, -7, 1, 2, -6, 3};
    int n = sizeof(arr)/sizeof(arr[0]);

    printf("Zero sum subarrays = %d", countZeroSum(arr, n));

    return 0;
}
