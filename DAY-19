#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

// Function to compare elements for qsort
int compare(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

void findClosestToZero(int arr[], int n) {
    if (n < 2) {
        printf("Array must have at least two elements.\n");
        return;
    }

    // Step 1: Sort array
    qsort(arr, n, sizeof(int), compare);

    int left = 0;
    int right = n - 1;
    int min_sum = INT_MAX;
    int min_left = left, min_right = right;

    // Step 2: Two-pointer approach
    while (left < right) {
        int sum = arr[left] + arr[right];

        if (abs(sum) < abs(min_sum)) {
            min_sum = sum;
            min_left = left;
            min_right = right;
        }

        if (sum < 0)
            left++;
        else
            right--;
    }

    printf("Pair whose sum is closest to zero: %d and %d\n",
           arr[min_left], arr[min_right]);
}
